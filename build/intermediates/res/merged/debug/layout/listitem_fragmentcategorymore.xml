<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="40dp"
	android:descendantFocusability="blocksDescendants"
    android:padding="10dp"
    >

    
    <!-- 更多 -->
    <ImageButton
        android:id="@+id/listitem_fragmentcategorymore_morebtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:focusable="false"
        android:padding="12dp"
        android:layout_marginRight="-10dp"
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/more2"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/listitem_fragmentcategorymore_morebtn"
        android:layout_centerVertical="true"
        android:orientation="vertical" >

        <!-- 歌曲名称 -->
        <TextView
            android:id="@+id/listitem_fragmentcategorymore_tv1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:maxLines="1"
            android:textSize="15sp" />

        <!-- 歌手名称 -->
        <TextView
            android:id="@+id/listitem_fragmentcategorymore_tv2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:maxLines="1"
            android:textColor="#aaa"
            android:textSize="13sp" />
    </LinearLayout>

    

</RelativeLayout>